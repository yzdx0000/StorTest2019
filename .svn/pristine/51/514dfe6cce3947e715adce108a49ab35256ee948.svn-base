'''初始化'''
file_name = os.path.basename(__file__)
file_name = file_name[:-3]  # 获取本脚本名，去掉.py后缀
log_file_path = log.get_log_path(file_name)  # 获取日志目录，即test_cases/Log/Case_log
env_manage.rel_check_before_run(file_name, jnl_rep=3, free_jnl_num=0, node_num=3)

'''定义节点IP'''
node_ip1 = env_cache.deploy_ips[0]


def case():
    log.info("step:1.创建逻辑卷")
    lun_id = env_manage.create_lun(size="99999999999")
    log.info("create lun map")
    env_manage.create_lun_map()
    log.info("step:2.主机iscsi映射")
    env_manage.create_iscsi_login()
    log.info("step:2.设置lun预读为自动")
    env_cache.set_cache(id=lun_id, mode=1)
    # env_cache.update_osan_params(1)
    log.info("step:3.主机端下发顺序读业务")
    result1 = env_cache.run_vdb()
    log.info("step:4.设置lun预读为关闭")
    env_cache.set_cache(id=lun_id, mode=0)
    # env_cache.update_osan_params(0)
    result2 = env_cache.run_vdb()
    log.info("step:5.对比两次测试结果")
    if float(result1["bw"]) - float(result2["bw"]) > 0:
        log.info("Turn off cache detected performance degradation")
        return
    else:
        log.error("Turn off cache detected performance not degradation!!!!")
        os._exit(1)


def main():
    env_manage.clean_test_env()
    case()
    log.info("The case finished!!!")


if __name__ == '__main__':
    main()
