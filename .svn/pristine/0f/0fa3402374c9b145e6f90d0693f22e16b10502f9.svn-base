#!/usr/bin/python
# -*-coding:utf-8 -*
"""
:Date: 2018-10-30
:Author: diws
:Description:
1、在节点A上创建12条LUN，其中LUN1-LUN6对应对齐大小块混合读写，LUN7-LUN12为非对齐大小块混合读写；
2、使用2个主机，主机1映射LUN1-LUN6，主机2映射LUN7-LUN12；
3、在主机1上运行vdbench -f mix-R-Align.conf -jn；在主机2上运行vdbench -f mix-R.conf;
4、在步骤3中的业务运行过程中，将节点B和节点C的oJnl线程故障；
5、节点A接管节点B和节点C日志并重建成功后，恢复节点B和节点C的oJnl线程；
6、节点A重启；
7、节点A数据修复完成，在主机1上执行vdbench -f mix-R-Align.conf -jro比较一致性；
:Changerlog:
"""
import os,sys
import commands
import threading
import random
import time
import re
import utils_path
import common2
import common
import log
import get_config
import ReliableTest
import login
import error
import breakdown
import prepare_x1000

conf_file = common2.CONF_FILE
osan = common2.oSan()
disk = breakdown.disk()
node = common.Node()
# 初始化日志文件
file_name = os.path.basename(__file__)
file_name = file_name[:-3]
error.rel_check_before_run(file_name, jnl_rep=3, free_jnl_num=0, node_num=5)

# 获取集群节点信息
deploy_ips = get_config.get_env_ip_info(conf_file)
client_ips = get_config.get_allclient_ip()
vip = login.login()
# 修改vdbench配置文件的参数值
mix_S_align = osan.gen_vdb_xml(lun=osan.ls_scsi_dev(client_ips[0]),
                               xfersize="(5k,100)",
                               seekpct=100,
                               rdpct=0)
mix_S = osan.gen_vdb_xml(lun=osan.ls_scsi_dev(client_ips[1]),
                         xfersize="(3k,100)",
                         offset=2048,
                         seekpct=100,
                         rdpct=0)
"""获取日志节点"""
jnl_ids = disk.get_jnl_node_id()
a_id = random.choice(jnl_ids)
jnl_ids.remove(a_id)
b_id = random.choice(jnl_ids)
jnl_ids.remove(b_id)
c_id = random.choice(jnl_ids)
a_ip = disk.get_node_ip_by_id(n_id=a_id)
b_ip = disk.get_node_ip_by_id(n_id=b_id)
c_ip = disk.get_node_ip_by_id(n_id=c_id)
log.info("Got node IPs : %s %s %s" % (a_ip, b_ip, c_ip))


def up_down(pipeout):
    time.sleep(30)
    log.info("4、在步骤3中的业务运行过程中，将节点B %s 和节点C %s 的oJnl线程故障；" % (b_ip, c_ip))
    cmd = ("ssh %s 'mv /home/parastor/bin/oPara /home/parastor/bin/oPara.bak;killall -9 oPara'" % (b_ip,))
    commands.getstatusoutput(cmd)
    cmd = ("ssh %s 'mv /home/parastor/bin/oPara /home/parastor/bin/oPara.bak;killall -9 oPara'" % (c_ip,))
    commands.getstatusoutput(cmd)
    disk.check_lnode_state()
    log.info("5、节点A接管节点B和节点C日志并重建成功后，恢复节点B %s 和节点C %s 的oJnl线程；" % (b_ip, c_ip))
    cmd = ("ssh %s 'mv /home/parastor/bin/oPara.bak /home/parastor/bin/oPara'" % (b_ip,))
    commands.getstatusoutput(cmd)
    cmd = ("ssh %s 'mv /home/parastor/bin/oPara.bak /home/parastor/bin/oPara'" % (c_ip,))
    commands.getstatusoutput(cmd)
    log.info("6、节点A %s 重启；" % (a_ip,))
    log.info("Begin shutdown node %s." % (a_ip,))
    m_a_info = error.down_node(fault_ip=a_ip)
    time.sleep(30)
    log.info("Begin startup node %s." % (a_ip,))
    error.up_node(node_info=m_a_info)
    # 启动节点
    os.write(pipeout, "upnode")


def vdb_jn(pipein):
    log.info("3、:在主机1上运行vdbench -f mix-R-align.conf -jn.")
    osan.run_vdb(client_ips[0], mix_S_align, output=deploy_ips[0], jn_jro="jn")
    log.info("5、主机1上业务完成后，在主机1上执行vdbench mix-R-Align.conf -jro比较一致性；")
    osan.run_vdb(client_ips[0], mix_S_align, output=deploy_ips[0], jn_jro="jro")
    # 等待节点启动完成
    for ip in deploy_ips:
        common.check_ip(ip)
        error.check_host(ip)
    log.info("7、等待系统修复。")
    disk.check_bad_obj()
    while True:
        line = os.read(pipein, 32)
        if 'up' in line:
            break
    log.info("8、在主机1上执行vdbench -f mix-R-Align.conf -jro比较一致性；")
    osan.run_vdb(client_ips[0], mix_S_align, output=deploy_ips[0], jn_jro="jro")


    disk.multi_check_part_lun_uniform_by_ip()


def vdb_run():
    log.info("Step3:在主机2上运行vdbench -f mix-S.conf.")
    osan.run_vdb(client_ips[1], mix_S, output=deploy_ips[0], time=2400)


def main():
    test_threads = []
    (pipein, pipeout) = os.pipe()
    test_threads.append(threading.Thread(target=up_down, args=(pipeout,)))
    test_threads.append(threading.Thread(target=vdb_jn, args=(pipein,)))
    test_threads.append(threading.Thread(target=vdb_run))
    for test_thread in test_threads:
        test_thread.setDaemon(True)
        test_thread.start()
    for test_thread in test_threads:
        test_thread.join()
    exit(-110)


if __name__ == '__main__':
    common.case_main(main)
