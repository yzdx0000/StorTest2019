#!/usr/bin/python
#-*-coding:utf-8 -*
"""
:Date: 2018-09-10
:Author: wuyq
:Description:
1、在节点A上创建6条LUN，其中LUN1-LUN6对应对齐大小块混合读写，点C上创建LUN7-LUN12为非对齐大小块混合读写；
2、使用2个主机，主机1映射LUN1-LUN6，主机2映射LUN7-LUN12；
3、在主机1上运行vdbench -f mix-S-Align.conf -jn；在主机2上运行vdbench -f mix-S.conf;
4、在步骤3中的业务运行过程中，将业务节点A和业务节点D同时掉电；
5、业务执行完成后，在主机1上执行vdbench -f mix-S-Align.conf -jro比较一致性；
6、节点A和D上电后，数据修复完成，比较存储内部数据一致性；
:Changerlog:
"""
import os
import sys
import commands
import threading
import random
import time
import utils_path
import common2
import common
import log
import get_config
import ReliableTest
import login
import error
import breakdown

conf_file = common2.CONF_FILE    #配置文件路径
osan = common2.oSan()
reliable = breakdown.Os_Reliable()
disk = breakdown.disk()
node = common.Node()

file_name = os.path.basename(__file__)
file_name = file_name[:-3]                      #获取本脚本名，去掉.py后缀
error.rel_check_before_run(file_name,jnl_rep=3,node_num=6)
# 获取集群节点信息
deploy_ips = get_config.get_env_ip_info(conf_file)
client_ips = get_config.get_allclient_ip()
vip = login.login()
# 修改vdbench配置文件的参数值
mix_R_Align = osan.gen_vdb_xml(lun=osan.ls_scsi_dev(client_ips[0]),
                               xfersize="(4k,80,16k,20)",
                               seekpct=0,
                               rdpct=0)
mix_R = osan.gen_vdb_xml(lun=osan.ls_scsi_dev(client_ips[1]),
                         xfersize="(4k,80,16k,20)",
                         offset=2048,
                         seekpct=0,
                         rdpct=0)

# 获取访问分区ID与故障节点IP
access_zone_ids = reliable.get_access_zones(deploy_ips[0])
access_zone_A = access_zone_ids[0]
access_zone_B = access_zone_ids[1]
node_ids_A = reliable.get_node_ids_by_zone(access_zone_A)
node_ids_B = reliable.get_node_ids_by_zone(access_zone_B)
fault_node_id_A = random.choice(node_ids_A)
fault_node_id_B = random.choice(node_ids_B)
fault_node_ip_A = node.get_node_ip_by_id(fault_node_id_A)
fault_node_ip_B = node.get_node_ip_by_id(fault_node_id_B)

def up_down():
    log.info("故障点:两个访问分区同时故障其中一个节点")
    time.sleep(100)
    log.info("Step4:在主机业务运行过程中，将两个访问分区的各一个节点同时故障,节点:%s,%s" % (fault_node_ip_A, fault_node_ip_B))
    vm_id_A = error.down_node(fault_node_ip_A)
    vm_id_B = error.down_node(fault_node_ip_B)
    time.sleep(300)
    log.info("Step5:将故障节点上电恢复,节点:%s,%s" % (fault_node_ip_A, fault_node_ip_B))
    while True:
        time.sleep(30)
        log.info("等待A节点重新启动,节点:%s" % fault_node_ip_A)
        error.up_node(vm_id_A)
        rc = reliable.get_os_status(fault_node_ip_A)  # 检测重启后机器状态，是否已开机
        if 0 == rc:
            log.info("故障A节点启动成功,节点:%s" % fault_node_ip_A)
            break
    while True:
        time.sleep(30)
        log.info("等待B节点重新启动,节点:%s" % fault_node_ip_B)
        error.up_node(vm_id_B)
        rc = reliable.get_os_status(fault_node_ip_B)  # 检测重启后机器状态，是否已开机
        if 0 == rc:
            log.info("故障A节点启动成功,节点:%s" % fault_node_ip_B)
            break

    log.info("Step7:系统恢复正常且数据修复完成后，比较内部数据一致性")
    reliable.compare_data()

def vdb_jn():
    log.info("Step3:在主机1上运行vdbench -f mix-R-Align.conf -jn.")
    osan.run_vdb(client_ips[0], mix_R_Align, output=deploy_ips[0], jn_jro="jn",time=900)
    log.info("Step6:主机1上业务完成后，在主机1上执行vdbench -f mix-S-Align.conf -jro比较一致性")
    osan.run_vdb(client_ips[0], mix_R_Align, output=deploy_ips[0], jn_jro="jro")

    disk.multi_check_part_lun_uniform_by_ip()


def vdb_run():
    log.info("Step3:在主机2上运行vdbench -f mix-R.conf.")
    osan.run_vdb(client_ips[1], mix_R, output=deploy_ips[0],time=1000)

def case():
    test_threads = []
    test_threads.append(threading.Thread(target=up_down))
    test_threads.append(threading.Thread(target=vdb_jn))
    test_threads.append(threading.Thread(target=vdb_run))
    for test_thread in test_threads:
        test_thread.start()
    for test_thread in test_threads:
        test_thread.join()
    for c_ip in client_ips:
        osan.vdb_check(c_ip=c_ip, time=100, oper="iops", output=deploy_ips[0])
    for ip in vip:
        for cli in client_ips:
            pass
            #osan.iscsi_logout(cli,vip=ip)
def main():
    case()
if __name__ == '__main__':
    main()
