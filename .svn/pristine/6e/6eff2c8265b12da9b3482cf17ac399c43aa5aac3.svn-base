'''
测试内容: oRole进程异常创建映射
测试步骤：
1、创建节点池，创建存储池，配置访问区，添加启动器
2、创建逻辑卷lun1，映射到主机host1
3、主oRole异常
4、创建逻辑卷lun2，映射至主机host1
检查项：
1）访问区配置成功
2）映射成功

'''

import os
import time
import random
import commands
import threading
import utils_path
import log
import common
import ReliableTest
import env_manage
import decorator_func
from get_config import config_parser as cp

'''初始化'''
file_name = os.path.basename(__file__)
file_name = file_name[:-3]  # 获取本脚本名，去掉.py后缀
log_file_path = log.get_log_path(file_name)  # 获取日志目录，即test_cases/Log/Case_log


def setup():
    '''获取业务节点IP和非业务节点IP'''
    global node_ip1
    global node_ip2
    global client_ip1
    node_ip1 = env_manage.get_inter_ids()[0]  # 业务节点IP
    node_ip2 = env_manage.get_inter_ids()[-1]  # 非业务节点IP
    client_ip1 = env_manage.client_ips[0]


def run_kill(master_ip):
    ReliableTest.run_kill_process(node_ip=master_ip, process="oRole")


def del_lun_map(id):
    map_id = env_manage.com_lh.get_map_by_lun(node_ip1, id)
    log.info("在节点 %s 删除LUN MAP 映射 %s" % (node_ip1, map_id))
    env_manage.osan.delete_lun_map(s_ip=node_ip1, map_id=map_id)


def run_case():
    master_orole_ip = env_manage.com_lh.get_master_oRole(node_ip1)
    lun_id = env_manage.create_lun(node_ip2, "LUN2")
    log.info("step:2.删除lun map1时kill进程")
    threads = []
    t1 = threading.Thread(target=del_lun_map, args=(lun_id,))
    threads.append(t1)
    t2 = threading.Thread(target=run_kill, args=(master_orole_ip,))
    threads.append(t2)
    for t in threads:
        t.start()
    for t in threads:
        t.join()


def case():
    log.info("step:1.创建逻辑卷，创建lun map")
    env_manage.create_lun(node_ip1, "LUN1")
    threads = []
    threads.append(threading.Thread(target=env_manage.vdb_test))
    threads.append(threading.Thread(target=run_case))
    for t in threads:
        t.start()
    for t in threads:
        t.join()
    env_manage.com_lh.get_os_status(node_ip1)


def main():
    env_manage.clean_test_env()
    setup()
    case()
    log.info("step:3.检查清理测试环境")
    env_manage.clean_test_env()
    log.info("The case finished!!!")


if __name__ == "__main__":
    env_manage.rel_check_before_run(file_name, free_jnl_num=0, node_num=3)
    common.case_main(main)
