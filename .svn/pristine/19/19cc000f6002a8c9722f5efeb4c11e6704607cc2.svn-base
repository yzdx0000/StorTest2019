def list_certificates_cmd(ip,account_id):
    cmd='/home/parastor/bin/sysctl/parastor_pos'+' listcertificates'+' accountid='+str(account_id)  #执行查询账户认证命令本身
    cmd='ssh '+str(ip)+' -C '+"'"+cmd+"'"   #到管理节点去执行查询账户认证命令
    return cmd

def list_certificates_exc(ip,account_id):
    cmd=list_certificates_cmd(ip,account_id)
    print cmd
    (return_code,output)=commands.getstatusoutput(cmd)
    print return_code
    print output
    return (cmd,return_code,output)
