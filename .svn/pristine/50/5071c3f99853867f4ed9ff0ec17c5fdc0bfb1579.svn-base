FILE_NAME = os.path.splitext(os.path.basename(__file__))[0]                  # 本脚本名字
SNAP_TRUE_PATH = os.path.join(snap_common.SNAP_PATH, FILE_NAME)              # /mnt/liyao/snap/snap_13_1_3_14
CREATE_SNAP_PATH = os.path.join(snap_common.SNAP_PATH_BASENAME, FILE_NAME)   # /snap/snap_13_1_3_14


def grab_client_global(client_ip):
    '''获取私有客户端数据网'''
    node_obj = common.Node()
    sys_node_id_lst = node_obj.get_nodes_id()
    eth_list, data_ip_list = node_obj.get_node_eth(sys_node_id_lst[0])
    cmd = 'ssh %s ip addr | grep global | grep inet' % client_ip
    rc, stdout = common.run_command(client_ip, cmd)
    line_lst = stdout.splitlines()

    data_ips_part = []
    '''获取集群节点数据网IP的前两部分'''
    for ip in data_ip_list:
        ip_part_dist1 = ip.split('.')[0]
        ip_part_dist2 = ip.split('.')[1]
        ip_part = [ip_part_dist1, ip_part_dist2]
        ip_specific = '.'.join(ip_part)
        data_ips_part.append(ip_specific)

    eth_name_lst = []
    for line in line_lst:
        external_client_ip = line.split()[1].split('/')[0]
        eth_name = line.split()[-1]
        ip_part_dist1 = external_client_ip.split('.')[0]
        ip_part_dist2 = external_client_ip.split('.')[1]
        ip_part = [ip_part_dist1, ip_part_dist2]
        client_ip_part = '.'.join(ip_part)
        if client_ip_part in data_ips_part:
            eth_name_lst.append(eth_name)
    return eth_name_lst


def case():
    '''2> 运行00vdbench脚本'''
    common.vdbench_run(SNAP_TRUE_PATH, snap_common.CLIENT_IP_1, snap_common.CLIENT_IP_2, run_create=True)

    '''3> 创建快照'''
    snap_name = FILE_NAME + '_snapshot1'
    path = snap_common.VOLUME_NAME + ':/' + CREATE_SNAP_PATH
    snap_path = os.path.join(snap_common.SNAPSHOT_PAHT, snap_name)
    rc, stdout = snap_common.create_snapshot(snap_name, path)
    if 0 != rc:
        log.error('create_snapshot %s failed!!!' % snap_name)
        raise Exception('create_snapshot %s failed!!!' % snap_name)

    '''4> 运行01vdbench脚本'''
    common.vdbench_run(SNAP_TRUE_PATH, snap_common.CLIENT_IP_1, snap_common.CLIENT_IP_2, run_write=True)

    '''5> 断开客户端2的数据网，删除快照'''
    eth_name_list = grab_client_global(snap_common.CLIENT_IP_2)
    make_fault.down_eth(snap_common.CLIENT_IP_2, eth_name_list)
    log.info('waiting for 180s')
    time.sleep(180)

    rc, stdout = snap_common.delete_snapshot_by_name(snap_name)
    if 0 != rc:
        log.error('%s delete snapshot failed!!!' % (snap_name))
        raise Exception('%s delete snapshot failed!!!' % (snap_name))

    time.sleep(10)

    '''6> 恢复客户端2的数据网'''
    make_fault.up_eth(snap_common.CLIENT_IP_2, eth_name_list)

    '''3个客户端检查快照路径入口是否存在'''
    snap_common.check_snap_entry(snap_path)

    '''检查数据网是否完全修复'''
    log.info('waiting for 120s')
    time.sleep(120)
    count = 0
    while True:
        count += 1
        log.info("the %d times check badjobnr" % count)
        log.info("wait 60 seconds")
        time.sleep(60)
        if common.check_badjobnr():
            break
    return


def main():
    prepare_clean.snap_test_prepare(FILE_NAME)
    case()
    prepare_clean.snap_test_clean(FILE_NAME, fault=True)
    log.info('%s succeed!' % FILE_NAME)


if __name__ == '__main__':
    common.case_main(main)