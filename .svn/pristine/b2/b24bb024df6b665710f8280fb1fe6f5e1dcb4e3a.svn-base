'''
测试内容:多业务子网部分配置SVIP
测试步骤：
1）创建存储池和访问分区，配置2个业务子网其中一个业务子网配置SVIP、LUN
2）一个 主机映射SVIP对应的LUN
3）在主机端使用SVIP登录主机映射的LUN

检查项：
1）主机能扫描业务子网LUN
'''

import os
import time
import random
import commands
import threading
import utils_path
import log
import common
import ReliableTest
import prepare_x1000
import env_manage
import decorator_func
from get_config import config_parser as cp

'''初始化'''
file_name = os.path.basename(__file__)
file_name = file_name[:-3]  # 获取本脚本名，去掉.py后缀
log_file_path = log.get_log_path(file_name)  # 获取日志目录，即test_cases/Log/Case_log


def setup():
    '''获取业务节点IP和非业务节点IP'''
    global node_ip1
    global node_ip2
    global client_ip1
    node_ip1 = env_manage.get_inter_ids()[0]  # 业务节点IP
    node_ip2 = env_manage.get_inter_ids()[-1]  # 非业务节点IP
    client_ip1 = env_manage.client_ips[0]


def create_iscsi_login(ips, cli_ips):
    node_id = env_manage.com_lh.get_node_id_by_ip(ips)
    svip = env_manage.com2_osan.get_svip(ips, node_id)
    log.info("Get SVIP list ：%s" % svip)
    tag_list = env_manage.osan.discover_scsi_list(client_ip=cli_ips, svip=svip[0])
    log.info("主机发现存储target：%s,主机 %s 将进行SCSI登录" % (tag_list[0], cli_ips))
    env_manage.osan.iscsi_login(client_ip=cli_ips, iqn=tag_list[0])


def check_disk():
    disk_name = env_manage.osan.ls_scsi_dev(client_ip=client_ip1)
    if disk_name:
        disk_mums = len(disk_name)
        log.info("find X1000 LUN %s" % (disk_name))
        return disk_mums
    else:
        log.info("find X1000 LUN failed")
        exit(1)


def create_luns():
    for i in range(6):
        lun_name = "LUN" + str(i)
        env_manage.create_lun(node_ip1, lun_name)


def case():
    log.info("step:1.创建逻辑卷，创建lun map")
    create_luns()
    env_manage.create_lun_map()
    log.info("step:2.ISCSI 登录")
    env_manage.create_iscsi_login(client_ip1)
    nums = check_disk()
    if nums == 6:
        log.info("step:3.check disk success")
        env_manage.osan.iscsi_logout_all(client_ip1)
    else:
        log.info("have disk lost")
        exit(1)


def main():
    env_manage.clean_test_env()
    setup()
    case()
    log.info("step:4.检查清理测试环境")
    env_manage.clean_lun_map()
    env_manage.clean_lun()
    env_manage.clean_test_env()
    log.info("The case finished!!!")


if __name__ == '__main__':
    env_manage.rel_check_before_run(file_name, free_jnl_num=0, node_num=3)
    common.case_main(main)
