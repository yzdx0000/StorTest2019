'''
测试内容:节点异常情况下创建逻辑卷
测试步骤：
逻辑卷创建过程中将日志组一台非业务节点正常关机
检查项：
逻辑卷创建成功

'''

import os
import time
import random
import commands
import threading
import utils_path
import log
import common
import ReliableTest
import prepare_x1000
import env_manage
import decorator_func

'''初始化'''
file_name = os.path.basename(__file__)
file_name = file_name[:-3]  # 获取本脚本名，去掉.py后缀
log_file_path = log.get_log_path(file_name)  # 获取日志目录，即test_cases/Log/Case_log


def setup():
    '''获取业务节点IP和非业务节点IP'''
    global node_ip1
    global node_ip2
    global client_ip1
    node_ip1 = env_manage.get_inter_ids()[0]  # 业务节点IP
    node_ip2 = env_manage.get_inter_ids()[-1]  # 非业务节点IP
    client_ip1 = env_manage.client_ips[0]


infos = []
types = []


def os_down():
    """在系统下使用执行命令正常关机, reten os ID"""
    rc = env_manage.com_lh.get_cmd_status(node_ip1, cmd_name="create_lun")
    if rc == 0:
        os_type = env_manage.get_os_type(node_ip2)
        info = env_manage.down_node(node_ip2, os_type, "init 0")
        types.append(os_type)
        infos.append(info)
        log.info("Down node finish. Get the node type: %s ,info: %s" % (os_type, info))
        return
    elif rc == 1:
        log.error("Not find CMD ,timeout will exit")
        os._exit(1)


def case():
    log.info("step：1、节点关机，创建逻辑卷。")
    threads = []  # 创建并发队列
    t1 = threading.Thread(target=env_manage.create_lun, args=(node_ip1, "LUN1"))  # 创建lun
    threads.append(t1)
    t2 = threading.Thread(target=os_down)  # 节点关机
    threads.append(t2)
    for i in threads:
        i.start()
    for i in threads:
        i.join()
    log.info("step：2、%s 节点开机 节点类型%s,节点ID or IPMI IP: %s" % (node_ip2, types[0], infos[0]))
    env_manage.up_node(infos[0], types[0])
    log.info("step：3、检查节点运行状态，检查服务恢复情况。")
    env_manage.com_lh.get_os_status(node_ip2)


def main():
    env_manage.clean_test_env()
    setup()
    case()
    log.info("step:4.清理测试环境")
    env_manage.clean_lun()
    env_manage.clean_test_env()
    log.info("The case finished!!!")


if __name__ == "__main__":
    env_manage.rel_check_before_run(file_name, jnl_rep=3, free_jnl_num=0, node_num=3)
    common.case_main(main)
