def del_account_cmd(ip,account_id):
    cmd='/home/parastor/bin/sysctl/parastor_pos'+' delaccount'+' accountid='+str(account_id)  #执行删除指定账户命令本身
    cmd='ssh '+str(ip)+' -C '+"'"+cmd+"'"   #到管理节点去执行删除指定账户命令
    return cmd

def del_account_exc(ip,account_id):
    cmd=del_account_cmd(ip,account_id)
    print cmd
    (return_code,output)=commands.getstatusoutput(cmd)
    print return_code
    print output
    return (cmd,return_code,output)
