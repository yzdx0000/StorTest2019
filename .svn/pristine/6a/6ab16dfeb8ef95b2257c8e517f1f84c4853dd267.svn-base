def clean_lun_map():
    iscsi_logout()  # 删除lun_map前先在所有主机端logout
    lun_map_ids = osan.get_lun_maps(node_ip)
    log.info(lun_map_ids)
    threads = []
    for i in lun_map_ids:
        threads.append(threading.Thread(target=osan.delete_lun_map, args=(node_ip1, i)))
    for t in threads:
        t.start()
    for t in threads:
        t.join()


