def list_buckets_cmd(ip,bucket_name,certificate_id):
    cmd='curl -i http://'+str(ip)+':20480/'+str(bucket_name)+'?acl -XGET -H '+' \"Authorization: AWS4-HMAC-SHA256 Credential='+str(certificate_id)+'\"'  #执行获取bucket的acl命令本身
    return cmd

def list_buckets_exc(ip,bucket_name,certificate_id):
    cmd=list_buckets_cmd(ip,bucket_name,certificate_id)
    print cmd
    (return_code,output)=commands.getstatusoutput(cmd)
    print return_code
    print output
    return (cmd,return_code,output)
