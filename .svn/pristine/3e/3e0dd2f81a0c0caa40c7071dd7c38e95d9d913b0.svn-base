import os,sys
import commands

#命令生成函数
def acc_del_cmd(acc_id):
	part1 = "/home/parastor/bin/sysctl/parastor_pos delaccount accountid="	 	#拼串片段，无需关注。
	cmd = ''.join((part1,acc_id))#生成指令
	return cmd

#删除账户函数
def acc_del(acc_id):#输入参数为:"账户id"
	cmd = acc_del_cmd(acc_id)
	(return_code,output)=commands.getstatusoutput(cmd)
	if (output[0:1]!='a'):
		print "delete error!"
		sys.exit(0)
	print "delete success!"

