import os
import sys
import random

#【主调函数】输入文件生成的绝对路径和文件大小作为参数。以M为单位。
def mk_file(obj_path,amount):
        a=[0 for x in range(1024*1024)]
        for i in range(len(a)-10):
            a[i]='a'
        for j in range(10):
            data=random.randint(0,9)
            a[len(a)-10+j]=str(data)
        a="".join(a)
        f=open(obj_path,'a+')
        for k in range(amount):
                f.write(a)
        f.close()

#创建随机字符
def radom_character(charnumber):
	data = ''
	for i in range(int(charnumber)):
		data_cur = random.choice('abcdefghijklmnopqrstuvwxyz')
		data = data + data_cur
	return data

if __name__ == '__main__':
	mk_file(sys.argv[1],int(sys.argv[2]))
