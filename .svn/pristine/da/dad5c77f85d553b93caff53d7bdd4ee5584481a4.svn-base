import os
import sys
import commands
bucketname_lst = []                                    #定义桶名字的列表
for i in range(2,101):                              #定义桶列表元素循环，主要是桶名字的后缀
	a='zff'                                     #桶名字的前缀
	bucketname_lst.append(a+str(i))             #将字符和数字组合成桶名
print bucketname_lst
for bucketname in bucketname_lst:                       #获取桶名的列表元素
	d="curl -i http://10.2.20.103:20480/%s -X DELETE -H 'Authorization: AWS4-HMAC-SHA256 Credential=000020ZYIVOIY1V000001YJ9QLJAG932'" %(bucketname)  #删除指定的桶
	rc, stdout = commands.getstatusoutput(d)    #使用commands模块执行Linux shell命令	
	print stdout


