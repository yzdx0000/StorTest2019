dir="/home/parastor/bin/sysctl/parastor_pos"  #管理节点执行命令路径
def list_accounts_cmd(ip):
    cmd='/home/parastor/bin/sysctl/parastor_pos'+' listaccounts'  #执行获取所有账户信息的命令
    cmd='ssh '+str(ip)+' -C '+"'"+cmd+"'"   #到管理节点去执行获取所有账户信息的命令
    return cmd

def list_accounts_exc(ip):
    cmd=list_accounts_cmd(ip)
    print cmd
    (return_code,output)=commands.getstatusoutput(cmd)
    print return_code
    print output
    return (cmd,return_code,output)
#函数自验*****
if __name__=="__main__":
    all_argvs=read_conf_zh.get_argvs()
