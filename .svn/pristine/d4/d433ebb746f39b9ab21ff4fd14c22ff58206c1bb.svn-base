FILE_NAME = os.path.splitext(os.path.basename(__file__))[0]              # 本脚本名字
'''集群节点ip'''
SYSTEM_IP_0 = get_config.get_parastor_ip()
SYSTEM_IP_1 = get_config.get_parastor_ip(1)
SYSTEM_IP_2 = get_config.get_parastor_ip(2)

system_disk_status_list = snmp_common.get_system_disk_status()

def compare_system_disk_state(node_ip):
    system_disk_stat = ""
    list_value = snmp_common.get_nodeid_by_nodeip(node_ip) - 1
    stdout = snmp_common.get_disk_value_info(node_ip)
    for disk in stdout["result"]["disks"]:
        if disk["is_system"]:
            system_disk_stat = disk["state"]
            break
    if system_disk_stat == system_disk_status_list[list_value]:
        return True
    else:
        common.except_exit("compare system state failed!!!")

def case():
    node_ip_list = get_config.get_allparastor_ips()
    for node_ip in node_ip_list:
        compare_system_disk_state(node_ip)
    log.info("system disk stat compare is success")

def main():
    prepare_clean.test_prepare(FILE_NAME)
    log.info("case begin")
    case()
    prepare_clean.test_clean()
    log.info('%s succeed!' % FILE_NAME)


if __name__ == '__main__':
    common.case_main(main)