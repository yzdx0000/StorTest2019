'''
测试内容:节点异常情况下创建逻辑卷
测试步骤：
1）创建逻辑卷创建完成后映射至主机将日志组业务节点拔掉电源
2）检查逻辑卷状态
3）将逻辑卷重新映射至主机，对逻辑卷进行读写
检查项：
1）逻辑卷状态显示正常
2）可正常读写
'''

import os
import time
import random
import commands
import threading
import utils_path
import log
import common
import ReliableTest
import prepare_x1000
import env_manage
import decorator_func

'''初始化'''
file_name = os.path.basename(__file__)
file_name = file_name[:-3]  # 获取本脚本名，去掉.py后缀
log_file_path = log.get_log_path(file_name)  # 获取日志目录，即test_cases/Log/Case_log


def setup():
    '''获取业务节点IP和非业务节点IP'''
    global node_ip1
    global node_ip2
    global client_ip1
    node_ip1 = env_manage.get_inter_ids()[0]  # 业务节点IP
    node_ip2 = env_manage.get_inter_ids()[-1]  # 非业务节点IP
    client_ip1 = env_manage.client_ips[0]


def vdb_test():
    lun_name = env_manage.osan.ls_scsi_dev(client_ip=client_ip1)
    vdb_file = env_manage.osan.gen_vdb_xml(lun=lun_name, xfersize="4k", rdpct="50")
    log.info("vdbench 进行读写业务")
    env_manage.com2_osan.run_vdb(client_ip=client_ip1, vdb_xml=vdb_file, output=node_ip1, jn_jro="jn", time=300)
    env_manage.com2_osan.run_vdb(client_ip=client_ip1, vdb_xml=vdb_file, output=node_ip1, jn_jro="jro")


def vdb_result():
    log.info("保存vdb测试结果")
    env_manage.osan.save_vdb_log(c_ip=client_ip1, f_name="vdbtest")


def case():
    log.info("step:1.创建逻辑卷")
    env_manage.create_lun()
    log.info("step:2.创建lun map")
    env_manage.create_lun_map(ips=node_ip1)
    log.info("step:3.ISCSI 登录")
    env_manage.create_iscsi_login()
    log.info("step:4.关闭节点")
    os_type = env_manage.get_os_type(node_ip1)
    info = env_manage.down_node(node_ip1, os_type)
    log.info("step:5. vdbench测试，结果检查")
    vdb_test()
    vdb_result()
    log.info("step:6.%s 节点开机 节点类型%s,节点ID or IPMI IP: %s" % (node_ip1, os_type, info))
    env_manage.up_node(info, os_type)
    log.info("step:7.检查节点运行状态，检查服务恢复情况。")
    env_manage.com_lh.get_os_status(node_ip1)


def main():
    env_manage.clean_test_env()  # 测试前检查运行环境
    setup()
    case()  # 运行case
    log.info("step:8.清理测试环境")
    env_manage.osan.iscsi_logout_all(client_ip1)  # 清理主机端scsi
    env_manage.clean_lun_map()  # 删除lun map
    env_manage.clean_lun()  # 删除lun
    env_manage.clean_test_env()  # 测试后检查运行环境
    log.info("The case finished!!!")


if __name__ == "__main__":
    env_manage.rel_check_before_run(file_name, jnl_rep=3, free_jnl_num=0, node_num=3)
    common.case_main(main)
