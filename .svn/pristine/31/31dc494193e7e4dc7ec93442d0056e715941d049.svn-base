def get_useremails_lst():
	users = []
	useremails = []
	for i in range(3,1005):                              #定义桶列表元素循环，主要是桶名字的后缀
        	a='xiaopang'                                     #桶名字的前缀
        	users.append(a+str(i))             #将字符和数字组合成桶名
        	useremails.append(a+str(i)+"@sugon.com")
	return users,useremails
