def get_account_cmd(ip,account_id):
    cmd='/home/parastor/bin/sysctl/parastor_pos'+' getaccount'+' accountid='+str(account_id)  #执行获取账户信息的命令
    cmd='ssh '+str(ip)+' -C '+"'"+cmd+"'"   #到管理节点去执行获取账户信息的命令
    return cmd

def get_account_exc(ip,account_id):
    cmd=get_account_cmd(ip,account_id)
    print cmd
    (return_code,output)=commands.getstatusoutput(cmd)
    print return_code
    print output
    return (cmd,return_code,output)
