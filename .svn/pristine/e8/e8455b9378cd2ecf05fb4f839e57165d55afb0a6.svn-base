def get_bucket_storage_cmd(ip,bucket_name,certificate_id):
    cmd='curl -i http://'+str(ip)+':20480/'+str(bucket_name)+'?storageinfo -XGET -H '+' \"Authorization: AWS4-HMAC-SHA256 Credential='+str(certificate_id)+'\"'  #执行查看桶空间命令本身
    return cmd

def get_bucket_storage_exc(ip,bucket_name,certificate_id):
    cmd=get_bucket_storage_cmd(ip,bucket_name,certificate_id)
    print cmd
    (return_code,output)=commands.getstatusoutput(cmd)
    print return_code
    print output
    return (cmd,return_code,output)
