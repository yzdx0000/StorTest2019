import os,sys
import commands
import AuthSignature

#获取sig函数
def create_sig(sk,bucketname):
	StringToSign = "DELETE" + "\n" + "" + "\n" + "" + "\n" + "" + "\n" + "" + "/"+bucketname
	sig = AuthSignature.mk_sig(sk,StringToSign)
	sig = AuthSignature.mk_sig_code(sig)
	return sig

#创建桶命令生成函数
def bucket_del_cmd(ip,bucketname,AK,SK):
	sig = create_sig(SK,bucketname)
	part1 = "curl -i http://" 	#拼串片段，无需关注。
	part2 = ":20480/" 							 	#拼串片段，无需关注。
	part3 = " -XDELETE -H \"Authorization: AWS "		#拼串片段，无需关注。
	part4 = ":"
	cmd = ''.join((part1,ip,part2,bucketname,part3,AK,part4,sig,"\""))#生成创建桶的指令
	return cmd

#创建桶函数
def bucket_del(ip,bucketname,AK,SK):	#输入参数为:"ostor_ip","桶名"，"证书id"
	cmd = bucket_del_cmd(ip,bucketname,AK,SK)
	(return_code,output)=commands.getstatusoutput(cmd)
	return output

