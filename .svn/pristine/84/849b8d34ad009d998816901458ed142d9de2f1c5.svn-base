import utils_path
import log
import common
import ReliableTest
import prepare_x1000
import env_manage
import decorator_func

'''初始化'''
file_name = os.path.basename(__file__)
file_name = file_name[:-3]  # 获取本脚本名，去掉.py后缀
log_file_path = log.get_log_path(file_name)  # 获取日志目录，即test_cases/Log/Case_log


def setup():
    '''获取业务节点IP和非业务节点IP'''
    global node_ip1
    global node_ip2
    global client_ip1
    node_ip1 = env_manage.get_inter_ids()[0]  # 业务节点IP
    node_ip2 = env_manage.get_inter_ids()[-1]  # 非业务节点IP
    client_ip1 = env_manage.client_ips[0]


def update_luns(s_ip):
    pass
    # lun_ids = env_manage.osan.get_lun(s_ip=node_ip1)
    # env_manage.osan.update_lun(s_ip=node_ip1,lun_id=id)


def check_res(s_ip):
    log.info("检查逻辑卷名称")
    decorator_func.judge_target(
        env_manage.osan.get_option(s_ip=s_ip, command="get_luns", indexname='luns', argv='name'), [u'LUN1'])


def case():
    data_net = env_manage.com_lh.get_eth_name(s_ip=node_ip1)[1]
    log.info("step:1.创建逻辑卷")
    env_manage.create_lun()
    log.info("step:2.关闭网卡")
    env_manage.down_network(ipaddr=node_ip1, name=data_net)
    log.info("step:3.修改lun")
    update_luns(node_ip2)
    log.info("step:4.检查lun")
    check_res(node_ip2)
    log.info("step:5.恢复网卡")
    env_manage.up_network(ipaddr=node_ip1, name=data_net)


def main():
    env_manage.clean_test_env()
    setup()
    case()
    log.info("step:6.清理检查环境")
    env_manage.clean_lun()
    env_manage.clean_test_env()
    log.info("The case finished!!!")


if __name__ == "__main__":
    env_manage.rel_check_before_run(file_name, jnl_rep=3, free_jnl_num=0, node_num=3)
    common.case_main(main)
