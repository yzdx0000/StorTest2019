# -*- coding:utf-8 -*
import os,sys,commands
##########################
#函数作用：判断需要创建的文件是否已经存在，如果存在则删除后重新创建，否则创建一个新的
def touchfile(filepath):
    #print '进入了创建log文件函数'
    if os.path.exists(filepath):
        print '%s已经存在' %filepath
        (sta,out)=commands.getstatusoutput('rm -rf '+filepath)
        print 'sta is %s,out is %s' %(sta,out)
        (sta1, out1) = commands.getstatusoutput('rm -rf ' + filepath)
        print 'sta1 is %s,out1 is %s' % (sta1, out1)
        print '删除在创建'
        (staa, outt)=commands.getstatusoutput('touch '+filepath)
        print 'staa is %s,outt is %s' %(staa,outt)
        return True
    else:
        print '直接创建'
        stab,outb=commands.getstatusoutput('touch '+filepath)
        print stab,outb
        return False
