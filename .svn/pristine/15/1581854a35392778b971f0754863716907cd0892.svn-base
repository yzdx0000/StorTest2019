import subprocess,commands   #调用子进程执行shell

#添加自定义模块*****
import _create_logfile_zh    #记录日志模块
import read_conf_zh    #获取conf中变量的模块

#定义”获取更新账户命令“函数，三个参数依次表示mgr节点ip、账户id、账户配额
def upd_account_cmd(ip,account_id,quota):
    cmd='/home/parastor/bin/sysctl/parastor_pos'+' updaccount'+' accountid='+str(account_id)+' quota='+str(quota)  #执行更新现有账户命令本身
    cmd='ssh '+str(ip)+' -C '+"'"+cmd+"'"   #到管理节点去执行更新现有账户命令
    return cmd

#定义”获取更新账户命令“函数，其功能用于更新账户配额，三个参数依次表示mgr节点ip、账户id、>账户配额
def upd_account_exc(ip,account_id,quota):
    cmd=upd_account_cmd(ip,account_id,quota)   #获取更新账户命令
    print cmd
    (return_code,output)=commands.getstatusoutput(cmd)
    print return_code
    print output
    return (cmd,return_code,output)
