def get_bucket_quota_cmd(ip,bucket_name,certificate_id):
    cmd='curl -i -s http://'+str(ip)+':20480/'+str(bucket_name)+'?quota -XGET -H '+' \"Authorization: AWS4-HMAC-SHA256 Credential='+str(certificate_id)+'\"'  #执行创查询桶容量命令本身
    return cmd

def get_bucket_quota_exc(ip,bucket_name,certificate_id):
